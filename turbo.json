{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
   "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "persistent": true
    }
  }
}
